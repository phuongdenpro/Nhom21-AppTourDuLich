<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#EF0D0D"
            android:gravity="center"
            android:padding="12dp"
            android:text="Update Place"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_update"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Your name place" />

        <EditText
            android:id="@+id/des_update"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Desctiptive place" />

        <EditText
            android:id="@+id/local_update"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Located at" />

        <EditText
            android:id="@+id/pr_update"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Price" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/btn_update_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Update" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>